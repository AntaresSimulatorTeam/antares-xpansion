FROM centos:7

ARG ANTARES_DEPS_VERSION
ARG ANTARES_SOLVER_VERSION

# Install requirements : update repo
RUN yum update -y

# Install requirements : install epel
RUN yum install -y epel-release 

# Install requirements
RUN yum install -y git redhat-lsb-core gcc gcc-c++ make wget

# Install xpansion requirements
RUN yum install -y centos-release-scl scl-utils jsoncpp-devel gtest-devel &&\
    yum install -y openmpi-devel boost-openmpi-devel doxygen graphviz boost-program-options cmake3 devtoolset-7 environment-modules rpm-build zlib-devel
    
# Add python and pip installation for antares-xpansion
RUN yum install -y python3-pip &&\
    python3 -m pip install --upgrade pip &&\
    pip3 install pyinstaller pyyaml pytest numpy touch pytest-cov mkdocs mkdocs-material

# Download and extract pre-compiled libraries
RUN wget https://github.com/AntaresSimulatorTeam/antares-deps/releases/download/v${ANTARES_DEPS_VERSION}/rte-antares-deps-centos7-Release-solver-no-ortools.tar.gz
RUN tar -xvf rte-antares-deps-centos7-Release-solver-no-ortools.tar.gz
RUN rm -rf rte-antares-deps-centos7-Release-solver-no-ortools.tar.gz

RUN wget https://github.com/AntaresSimulatorTeam/Antares_Simulator/releases/download/v${ANTARES_SOLVER_VERSION}/antares-${ANTARES_SOLVER_VERSION}-CentOS-7.9.2009.tar.gz
RUN tar -xvf antares-${ANTARES_SOLVER_VERSION}-CentOS-7.9.2009.tar.gz -C rte-antares-deps-Release --strip-components=1
RUN rm -rf antares-${ANTARES_SOLVER_VERSION}-CentOS-7.9.2009.tar.gz
